/* 记录 */
.navigator-box {
  opacity: 0;
  position: relative;
  background-color: snow;
  line-height: 1.41176471;
  font-size: 34rpx;
  transform: translateY(-50%);
  transition: 0.3s;
}
@media (prefers-color-scheme: dark) {
  .navigator-box {
    opacity: 0;
    position: relative;
    background-color: #666666;
    line-height: 1.41176471;
    font-size: 34rpx;
    transform: translateY(-50%);
    transition: 0.3s;
  }
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(-0.707,0.707,-0.707,-0.707,0,0);
  position: absolute;
  top: 50%;
  margin-top: -13rpx;
  right: 28rpx;
}

